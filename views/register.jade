extends layout

block content
  .container
    h1 عضویت
    if (error)
     div(class="alert alert-danger" role="alert") Error! #{error}

    br
    form(role='form', action="/register",method="post")
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-success(type='submit') ارسال
      a(href='/' class="mx-2")
        button.btn.btn-primary(type="button") بازگشت
